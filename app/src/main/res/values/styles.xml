<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btn_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
    </style>
    <style name="btn_number_style" parent="btn_style">
        <item name="android:background">@drawable/btn_number_selector</item>
    </style>
    <style name="btn_number_bottom_style" parent="btn_style">
        <item name="android:background">@drawable/btn_number_bottom_selector</item>
    </style>
    <style name="btn_operator_style" parent="btn_style">
        <item name="android:background">@drawable/btn_operator_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="btn_operator_bottom_style" parent="btn_style">
        <item name="android:background">@drawable/btn_operator_bottom_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
